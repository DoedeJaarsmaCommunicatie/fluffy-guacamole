<header class="bg-grey">
    <div class="container mx-auto py-2">
        <div class="md:flex px-4 xl:px-0">
            <section class="ml-auto">
                <span class="mr-4">
                    <i class="fas fa-phone fa-flip-horizontal text-black"></i>
                    <a href="tel:{{ theme.theme_mod('phonenumber') }}">{{ theme.theme_mod('phonenumber') }}</a>
                </span>
                <span>
                    <a href="mailto:{{ theme.theme_mod('emailaddress') }}">{{ theme.theme_mod('emailaddress') }}</a>
                </span>
            </section>
        </div>
    </div>
</header>
<header class="py-6 px-4 xl:px-0 relative">
    <div class="container mx-auto">
        <div class="flex">
            <a href="/">
                <img class="logo" src="{{ Image(theme.theme_mod('custom_logo')).src }}" alt="{{ site.title }}">
            </a>

            <button class="xl:hidden ml-auto js-menu__toggle">
                <i class="fas fa-bars text-2xl"></i>
            </button>

            <nav class="nav-menu">
                {% include 'templates/layouts/helpers/partials/navigation.twig' %}
            </nav>
        </div>
    </div>
</header>

<script>
    document.querySelector('.js-menu__toggle').addEventListener('click', function () {
        document.querySelector('.nav-menu').classList.toggle('active')
    })
</script>
